{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Produkt</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id produktu</th>
                <td>{{ product.productId }}</td>
            </tr>
            <tr>
                <th>SKU</th>
                <td>{{ product.SKU }}</td>
            </tr>
            <tr>
                <th>EAN</th>
                <td>{{ product.EAN }}</td>
            </tr>
            <tr>
                <th>Cena netto</th>
                <td>{{ product.priceWholesale }}</td>
            </tr>
            <tr>
                <th>Cena sugerowana</th>
                <td>{{ product.priceSuggested }}</td>
            </tr>
            <tr>
                <th>Nazwa</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Opis</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Zdjęcie główne</th>
                <td>{{ product.image }}</td>
            </tr>
            <tr>
                <th>Warianty</th>
                <td>{{ product.variants }}</td>
            </tr>
            <tr>
                <th>Atrybuty</th>
                <td>{{ product.attributes }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_product_index') }}">Powrót do listy</a>

    <a href="{{ path('app_product_edit', {'product_id': product.productId}) }}">Edytuj</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
