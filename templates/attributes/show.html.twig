{% extends 'base.html.twig' %}

{% block title %}Attributes{% endblock %}

{% block body %}
    <h1>Attributes</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ attribute.id }}</td>
            </tr>
            <tr>
                <th>Attribute_id</th>
                <td>{{ attribute.attributeId }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ attribute.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ attribute.description }}</td>
            </tr>
            <tr>
                <th>Attribute_group_id</th>
                <td>{{ attribute.attributeGroupId }}</td>
            </tr>
            <tr>
                <th>Order_sort</th>
                <td>{{ attribute.orderSort }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ attribute.type }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ attribute.active ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Default_value</th>
                <td>{{ attribute.defaultValue }}</td>
            </tr>
            <tr>
                <th>Options</th>
                <td>{{ attribute.options }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_attributes_index') }}">back to list</a>

    <a href="{{ path('app_attributes_edit', {'id': attribute.id}) }}">edit</a>

    {{ include('attributes/_delete_form.html.twig') }}
{% endblock %}
