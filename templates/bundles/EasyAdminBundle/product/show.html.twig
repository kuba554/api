{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>SKU</th>
                <td>{{ product.SKU }}</td>
            </tr>
            <tr>
                <th>EAN</th>
                <td>{{ product.EAN }}</td>
            </tr>
            <tr>
                <th>Price_netto</th>
                <td>{{ product.priceNetto }}</td>
            </tr>
            <tr>
                <th>Price_brutto</th>
                <td>{{ product.priceBrutto }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ product.image }}</td>
            </tr>
            <tr>
                <th>Variants</th>
                <td>{{ product.variants }}</td>
